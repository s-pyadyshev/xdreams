mixin menu()
  nav.menu
    ul.menu__list
      li.menu__item
        button(data-collapse-target="menu1" data-collapse-group="menu").menu__link Our teams
        ul.menu__content 
          li(data-collapse-content="menu1")
            .swiper.slider-menu.slider-menu1
              .swiper-wrapper
                .swiper-slide
                  a(href="/").menu__content-link
                    img(src="images/retail.jpg" alt="Retail.")
