                .swiper-slide
                  a(href="/").menu__content-link
                    img(src="images/retail.jpg" alt="Bedquarters.")
                    h3 Bedquarters
                .swiper-slide
                  a(href="/").menu__content-link
                    img(src="images/retail.jpg" alt="Distribution.")
                    h3 Distribution
                .swiper-slide
                  a(href="/").menu__content-link
                    img(src="images/retail.jpg" alt="Bed Factory.")
                    h3 Bed Factory
              .swiper-pagination
              .swiper-navigation
                button.swiper-button-prev
                  +svg('chevron-left')
                button.swiper-button-next
                  +svg('chevron-right')
